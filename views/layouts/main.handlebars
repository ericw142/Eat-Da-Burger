	<script>

		$('.devouredToggle').on('click', function(event) {
			event.preventDefault();

			var id = $(this).data("id");

    		// Send the POST request.
    		$.ajax("/api/burgers/" + id, {
      			type: "PUT",
				success: function(response) {
					  
					  location.assign("/");
   				}
    		});
		})

		$(".deleteBtn").on("click", function(event) {
			event.preventDefault();

			var deleteId = $(this).data("id");

			$.ajax("/api/burgers/"+ deleteId, {
				type: "DELETE",
				success: function(response) {

